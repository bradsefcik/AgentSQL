modules = ["dotnet-7.0", "web", "nodejs-20", "dotnet-8.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AgentSQL Server"

[[workflows.workflow]]
name = "AgentSQL Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AgentSQL && dotnet run --no-build"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["dotnet", "run", "--project", "AgentSQL", "--configuration", "Release"]
