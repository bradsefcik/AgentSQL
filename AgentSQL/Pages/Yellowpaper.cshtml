@page
@model AgentSQL.Pages.YellowpaperModel
@{
    ViewData["Title"] = "AgentSQL Yellow Paper";
}

<div class="container">
    <div class="paper-content">
        @Html.Raw(Model.YellowpaperContent)
    </div>
</div>

<style>
.paper-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.paper-content h1 {
    color: #2c3e50;
    border-bottom: 3px solid #f39c12;
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
}

.paper-content h2 {
    color: #34495e;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-left: 4px solid #f39c12;
    padding-left: 1rem;
}

.paper-content h3 {
    color: #34495e;
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
}

.paper-content h4 {
    color: #7f8c8d;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}

.paper-content ul, .paper-content ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
}

.paper-content li {
    margin-bottom: 0.5rem;
}

.paper-content strong {
    color: #2c3e50;
}

.paper-content code {
    background-color: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
}

.paper-content pre {
    background-color: #2c3e50;
    color: #ecf0f1;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin: 1rem 0;
}

.paper-content pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
}

.paper-content blockquote {
    border-left: 4px solid #bdc3c7;
    margin: 1rem 0;
    padding-left: 1rem;
    color: #7f8c8d;
}

.paper-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.9em;
}

.paper-content th, .paper-content td {
    border: 1px solid #ddd;
    padding: 0.6rem;
    text-align: left;
}

.paper-content th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.paper-content tr:nth-child(even) {
    background-color: #f9f9f9;
}

@@media (max-width: 768px) {
    .paper-content {
        padding: 1rem;
    }
    
    .paper-content table {
        font-size: 0.8em;
    }
    
    .paper-content th, .paper-content td {
        padding: 0.4rem;
    }
}
</style>